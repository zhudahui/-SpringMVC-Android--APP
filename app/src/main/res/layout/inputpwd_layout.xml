<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myInputPwdBase_gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/MyPwdInput_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/myinput_close"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入密码"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        />
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_below="@id/MyPwdInput_close"
        android:layout_marginTop="15dp"
        />

    <com.mobileclient.pay.InputPwdView_Pwd
        android:id="@+id/MyPwdInput_inputpwd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/myInputPwdBase_gray"
        android:layout_below="@id/MyPwdInput_close"
        />
    <TextView
        android:id="@+id/MyPwdInput_forgetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="12dp"
        android:text="忘记密码?"
        android:textColor="@color/myInputPwdBase_blue"
        android:layout_below="@id/MyPwdInput_inputpwd"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"

        />
    <GridView
        android:id="@+id/MyPwdInput_list"
        android:layout_below="@id/MyPwdInput_forgetpwd"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:divider="#ccc"
        android:dividerHeight="1dp"
        android:background="@color/myInputPwdBase_gray"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:padding="1dp"
        />


</RelativeLayout>
