<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical" >
    <include layout="@layout/title" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:text="订单名："
                        android:id="@+id/TV_orderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"

                        />
                    <TextView
                        android:text=""
                        android:id="@+id/orderName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="头像："
                        android:id="@+id/TV_userPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/userPhoto"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/damen"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="发布人："
                        android:id="@+id/TV_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/userName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="物流公司："
                        android:id="@+id/TV_expressCompanyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/expressCompanyName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="取货地址："
                        android:id="@+id/TV_expressCompanyAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/expressCompanyAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="收货地址："
                        android:id="@+id/TV_receiveAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/receiveAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="收货电话："
                        android:id="@+id/TV_receivePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/receivePhone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="收货备注："
                        android:id="@+id/TV_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/remark"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:scrollHorizontally="false"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="酬金："
                        android:id="@+id/TV_orderPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/orderPay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="订单状态："
                        android:id="@+id/TV_orderState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/orderState"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="取货码："
                        android:id="@+id/TV_receiveCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/receiveCode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="发布时间："
                        android:id="@+id/TV_addTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0000ff"
                        />
                    <TextView
                        android:text=""
                        android:id="@+id/addTime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <RatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:progressTint="@android:color/holo_orange_dark"
                    android:stepSize="1"
                    android:visibility="gone"
                    />
                <EditText
                    android:text=""
                    android:id="@+id/ET_Evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="4"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/btn_item_medium_default"
                    android:drawableLeft="@drawable/ic_user_pwd"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:scrollHorizontally="false"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    />
                <Button
                    android:text="我要抢单"
                    android:id="@+id/btnGetOrder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="15dip"
                    android:background="#D64F4D"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <Button
                    android:text="查看订单状态"
                    android:id="@+id/btnViewOrder"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="15dip"
                    android:background="#D64F4D"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


