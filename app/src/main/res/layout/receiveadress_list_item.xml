<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/receiveAddressName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货人地址" />
    <TextView
        android:id="@+id/receiveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货人姓名"
        android:layout_below="@id/receiveAddressName"
        />
    <TextView
        android:id="@+id/receivePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货人电话"
        android:layout_below="@id/receiveAddressName"
        android:layout_toRightOf="@id/receiveName"
        android:layout_marginLeft="30dp"/>
    <ImageView
        android:id="@+id/edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="180dp"
        android:layout_toRightOf="@+id/receivePhone"
        android:src="@drawable/edit"/>
</RelativeLayout>
