<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1">
                <TableRow android:layout_marginTop="5dp">
                    <TextView
                        android:text="认证照片："
                        android:id="@+id/TV_userPhoto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textColor="@color/hint_color"/>

                    <ImageView
                        android:id="@+id/authFile"
                        android:layout_width="225dp"
                        android:layout_height="225dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/damen" />
                </TableRow>
                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        android:text="学号："
                        android:id="@+id/userId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_color"
                        android:layout_weight="1.5"/>

                    <EditText
                        android:id="@+id/ET_userId"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dip"
                        android:layout_marginRight="5dp"
                        android:layout_weight="4"
                        android:background="@drawable/btn_item_medium_default"
                        android:drawableLeft="@drawable/ic_user_info"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:singleLine="true"
                        android:text="" />
                </TableRow>
                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        android:text="姓名："
                        android:id="@+id/TV_userName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_color"
                        android:layout_weight="1.5"/>
                    <EditText
                        android:text=""
                        android:id="@+id/ET_userName"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dip"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/btn_item_medium_default"
                        android:drawableLeft="@drawable/ic_user_info"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:singleLine="true"/>
                </TableRow>
                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        android:text="为了有效认证用户信息，请用户上传手持学生证或者学生卡的照片，谢谢配合"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_color"
                        android:layout_weight="1.5"/>

                </TableRow>
            </TableLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:gravity="center">
                <Button
                    android:text="上传信息"
                    android:id="@+id/btnUpload"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:background="#D64F4D"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

