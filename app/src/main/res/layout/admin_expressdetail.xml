<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFCCCCCC"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/userPhoto"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/damen" />

                <EditText
                    android:id="@+id/orderName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/userPhoto"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="订单名称"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/nickName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/orderName"
                    android:layout_toRightOf="@id/userPhoto"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="用户Id"

                    />
            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/TV_orderId"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="订单Id："
                    android:textColor="@color/black"


                    />

                <EditText
                    android:id="@+id/orderId"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_orderId"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="1" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/TV_takeUserId"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="代取者Id："
                    android:textColor="@color/black"


                    />

                <EditText
                    android:id="@+id/takeUserId"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_takeUserId"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="1" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/TV_expressCompanyName"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="快递公司："
                    android:textColor="@color/black"


                    />

                <EditText
                    android:id="@+id/expressCompanyName"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_expressCompanyName"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="圆通快递" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/TV_expressCompanyAddress"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="取货地址："
                    android:textColor="@color/black"

                    />

                <EditText
                    android:id="@+id/expressCompanyAddress"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_expressCompanyAddress"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="北邮北门" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/TV_receiveAddress"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="收货地址："
                    android:textColor="@color/black"

                    />

                <EditText
                    android:id="@+id/receiveAddress"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_receiveAddress"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="北邮北门" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                >

                <TextView
                    android:id="@+id/TV_receivePhone"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="收货电话："
                    android:textColor="@color/black"
                    android:visibility="gone"

                    />

                <EditText
                    android:id="@+id/receivePhone"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_receivePhone"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="133****3456"
                    android:visibility="gone"/>

            </RelativeLayout>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"

            >

            <TextView
                android:id="@+id/TV_receiveName"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="收货电话："
                android:textColor="@color/black"
                android:visibility="gone"

                />

            <EditText
                android:id="@+id/receiveName"
                android:layout_width="500dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/TV_receiveName"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="133****3456"
                android:visibility="gone"/>

        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                >

                <TextView
                    android:id="@+id/TV_receiveCode"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="收货码：    "
                    android:textColor="@color/black"


                    />

                <EditText
                    android:id="@+id/receiveCode"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_receiveCode"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="133****3456"
                   />

            </RelativeLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/TV_remark"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="收货备注："
                    android:textColor="@color/black"

                    />

                <EditText
                    android:id="@+id/remark"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_remark"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="着急使用" />

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/TV_orderState"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="订单状态："

                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/orderState"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_orderState"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="待接单" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/TV_orderPay"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="酬金：        "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/orderPay"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_orderPay"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="5" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                >

                <TextView
                    android:id="@+id/TV_addTime"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="发布时间："
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/addTime"
                    android:layout_width="500dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/TV_addTime"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="2018-09-18 23：09：08" />

            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/white"
                >
                <RatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:progressTint="@android:color/holo_orange_dark"
                    android:stepSize="1"

                    />
                <EditText
                    android:text=""
                    android:id="@+id/ET_Evaluate"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="4"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/btn_item_medium_default"
                    android:drawableLeft="@drawable/ic_user_pwd"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:scrollHorizontally="false"
                    android:layout_marginRight="5dp"

               />

            </LinearLayout>
            <Button
                android:text="修改"
                android:id="@+id/btnGetOrder"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="15dip"
                android:background="#D64F4D"
                android:textColor="@color/white"
                 />

        </LinearLayout>

    </ScrollView>
</LinearLayout>

